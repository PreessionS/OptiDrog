<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Dodano uprawnienie do internetu -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Dodano uprawnienie do sprawdzania stanu sieci -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Dodano uprawnienia do lokalizacji -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Dodano uprawnienie do wyświetlania nad innymi aplikacjami -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Dodano uprawnienie do usług działających w tle -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Dodano uprawnienie do usług lokalizacyjnych działających w tle (dla Android 10+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- Dodano uprawnienie do zapobiegania blokowaniu ekranu -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Dodano uprawnienia do rozpoznawania mowy -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Dodano uprawnienie do aparatu -->
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OptiDrog"
        android:resizeableActivity="true"
        android:exported="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="35">

        <!-- Google AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4008386368701250~5354005629"/>

        <!-- Unity Ads Game ID - ZASTĄP swoim Game ID z Unity Dashboard -->
        <meta-data
            android:name="com.google.android.gms.ads.UNITY_GAME_ID"
            android:value="5957207"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OptiDrog"
            android:screenOrientation="user"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="false"
            android:windowSoftInputMode="adjustNothing"
            android:launchMode="singleTop"
            android:enableOnBackInvokedCallback="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:theme="@style/Theme.OptiDrog"
            android:screenOrientation="user"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="false"
            android:windowSoftInputMode="adjustNothing"
            android:enableOnBackInvokedCallback="true" />

        <!-- Dodanie nowej usługi dla pływającego okienka -->
        <service
            android:name=".OverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Provider dla bezpiecznego udostępniania plików (np. CSV) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>